{
  "name": "fhevm-universal-sdk",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK - Framework-agnostic confidential dApp development",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:sdk && npm run install:examples",
    "install:sdk": "cd packages/fhevm-sdk && npm install",
    "install:examples": "npm run install:nextjs && npm run install:react && npm run install:vue && npm run install:node",
    "install:nextjs": "cd examples/nextjs-art-investment && npm install",
    "install:react": "cd examples/react-basic && npm install",
    "install:vue": "cd examples/vue-app && npm install",
    "install:node": "cd examples/nodejs-cli && npm install",
    "build": "npm run build:sdk",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "dev:nextjs": "cd examples/nextjs-art-investment && npm run dev",
    "dev:react": "cd examples/react-basic && npm start",
    "dev:vue": "cd examples/vue-app && npm run dev",
    "dev:node": "cd examples/nodejs-cli && npm start",
    "test": "cd packages/fhevm-sdk && npm test",
    "lint": "npm run lint:sdk",
    "lint:sdk": "cd packages/fhevm-sdk && npm run lint",
    "clean": "rm -rf node_modules packages/*/node_modules examples/*/node_modules packages/*/dist",
    "deploy:nextjs": "cd examples/nextjs-art-investment && vercel --prod",
    "compile:contracts": "cd examples/nextjs-art-investment && npx hardhat compile"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "blockchain",
    "sdk",
    "react",
    "vue",
    "nextjs",
    "nodejs",
    "universal",
    "framework-agnostic"
  ],
  "author": "FHEVM Community",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
